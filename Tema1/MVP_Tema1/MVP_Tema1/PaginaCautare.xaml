<Page x:Class="MVP_Tema1.PaginaCautare"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MVP_Tema1"
      xmlns:ctx="clr-namespace:MVP_Tema1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PaginaCautare">

    <Page.DataContext>
        <ctx:CuvantDictionarVM/>
    </Page.DataContext>
    
    <Grid Margin="65,0,0,0">

        <StackPanel HorizontalAlignment="Center"
                         VerticalAlignment="Center">
            <WrapPanel>
                <StackPanel>
                    <WrapPanel>
                        <TextBlock Text="Search:"></TextBlock>
                        <TextBox x:Name="searchTextBox" Width="100" 
                                 TextChanged="TextBox_TextChanged"></TextBox>
                    </WrapPanel>
                    <WrapPanel>
                        <TextBlock Text="Category:"/>
                        <ComboBox x:Name="categoryComboBox"
                                  ItemsSource="{Binding Categorii}"
                                  IsEnabled="{Binding ElementName=checkBox,Path=IsChecked}"/>
                        <CheckBox Name="checkBox"/> 
                    </WrapPanel>
                    <ListBox x:Name="searchListBox" ItemsSource="{Binding CuvinteDictionar}"
                             DisplayMemberPath="Cuvant"
                             Visibility="Hidden"
                             SelectionChanged="searchListBox_SelectionChanged"
                             ></ListBox>
                </StackPanel>
           
            </WrapPanel>

            <StackPanel>
                <TextBlock x:Name="wordCategory" TextWrapping="Wrap"></TextBlock>
                <TextBlock x:Name="wordDescription" TextWrapping="Wrap"></TextBlock>
                <Image x:Name="image" Width="50" Height="50" Stretch="Fill"/>
            </StackPanel>
            
        </StackPanel>

    </Grid>
</Page>
