<Page x:Class="MVP_Tema1.PaginaJoc"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ctx="clr-namespace:MVP_Tema1"
      xmlns:local="clr-namespace:MVP_Tema1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PaginaJoc">
    
    <Page.DataContext>
        <ctx:CuvantDictionarVM/>
    </Page.DataContext>

    <Grid>
        <TextBlock x:Name="textBlock" 
                    FontSize="20"
                       Margin="0,10,0,10" VerticalAlignment="Center" HorizontalAlignment="Center"
                       ></TextBlock>

            <Image x:Name="image" 
               Width="100" Height="100"  
                Stretch="Fill" Margin="0,10,0,10"
         ></Image>

        <StackPanel VerticalAlignment="Bottom" Margin="0,0,0,100">
            <TextBox x:Name="raspuns" Width="150" Margin="0,10,0,10" 
                     Height="50" TextWrapping="Wrap"></TextBox>
            <Button x:Name="button" Content="Next" Click="button_Click" 
                    Margin="0,10,0,10" Width="100" Height="50" ></Button>
        </StackPanel>
    </Grid>
</Page>
